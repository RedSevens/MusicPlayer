<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Password:</strong>
  <%= @user.password %>
</p>

<p>
	Playlists:
	<% @user.playlists.each do |playlist| %>
		<%= link_to playlist.name, playlist_path(playlist) %>
	<% end %>
	
	<% if @user.playlists == [] %>
		You have no playlists.
	<% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
